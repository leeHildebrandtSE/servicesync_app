<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color">

    <!-- Status Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="7:45 AM"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="ðŸ”‹ 95%"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- App Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <!-- Logo placeholder -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/primary_color"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ServiceSync"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WPC Hospital Meal Service"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Form Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Employee ID -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee ID"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/employeeIdText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="H001"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:layout_marginBottom="16dp" />

        <!-- Hostess Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hostess Name"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/hostessNameText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Sarah Johnson"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:layout_marginBottom="16dp" />

        <!-- Shift Schedule -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shift Schedule"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/shiftScheduleText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Morning Shift - 7:00 AM"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@drawable/input_background"
            android:layout_marginBottom="16dp" />

        <!-- Hospital Assignment Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥ Hospital Assignment"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/hospitalAssignmentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="General Hospital - Western Cape\nWard assignments ready for today"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸ” Login &amp; Start Shift"
            android:textColor="@color/white"
            android:background="@drawable/button_primary"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/reportsButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸ“‹ View Previous Reports"
            android:textColor="@color/text_primary"
            android:background="@drawable/button_secondary" />
    </LinearLayout>
</LinearLayout>